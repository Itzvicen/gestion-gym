<div class="pb-6">
	<div
		class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
		<!-- Miembros Activos -->
		<div class="bg-card text-card-foreground shadow rounded-lg border p-6">
			<div class="flex items-center justify-between mb-2">
				<h3 class="text-sm font-medium">Miembros Activos</h3>
				<i class="fa-solid fa-person-circle-check text-sm text-gray-600"></i>
			</div>
			<p class="text-2xl font-semibold">{{ active_members }}</p>
			<p class="text-sm">Miembros activos actuales</p>
		</div>

		<!-- Miembros Inactivos -->
		<div class="bg-card text-card-foreground shadow rounded-lg border p-6">
			<div class="flex items-center justify-between mb-2">
				<h3 class="text-sm font-medium">Miembros Inactivos</h3>
				<i class="fa-solid fa-circle-check text-sm text-gray-600"></i>
			</div>
			<p class="text-2xl font-semibold">{{ inactive_members }}</p>
			<p class="text-sm">Miembros inactivos actuales</p>
		</div>

		<!-- Suma de Pagos -->
		<div class="bg-card text-card-foreground shadow rounded-lg border p-6">
			<div class="flex items-center justify-between mb-2">
				<h3 class="text-sm font-medium">Total pagos</h3>
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="h-4 w-4 text-muted-foreground">
					<path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
				</svg>
			</div>
			<p class="text-2xl font-semibold">{{ total_payments }}€</p>
			<p class="text-sm">Cantidad total últimos 30 dias</p>
		</div>

		<!-- Pagos No Pagados -->
		<div class="bg-card text-card-foreground shadow rounded-lg border p-6">
			<div class="flex items-center justify-between mb-2">
				<h3 class="text-sm font-medium">Total impagado</h3>
				<i class="fa-solid fa-triangle-exclamation text-sm text-gray-600"></i>
			</div>
			<p class="text-2xl font-semibold">{{ unpaid_payments }}€</p>
			<p class="text-sm">Cantidad total últimos 30 dias</p>
		</div>
	</div>
</div>
