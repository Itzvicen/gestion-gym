<div class="w-full md:p-8 p-4">
	<div class="mb-4">
		<h2 class="font-bold text-2xl">Tu cuenta</h2>
		<p>Visualiza y modifica tus datos personales</p>
	</div>
	<div class="w-full flex md:flex-row flex-col gap-8">
		<div class="md:h-auto md:w-[60%] w-full bg-[#F9FAFB] p-6 rounded-lg">
			<h3 class="font-bold text-lg">Editar</h3>
			<form class="flex flex-col" action="/profile/update" method="POST" enctype="multipart/form-data">
				<div class="md:flex mt-4 gap-x-6">
					<div class="w-full grid grid-cols-1 gap-6 sm:grid-cols-2">
						<div>
							<label class="text-gray-700" htmlfor="first_name">
								Nombre
							</label>
							<input class="block w-full px-4 py-2 mt-2 text-gray-700  bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" type="text" name="first_name" value="{{ user.first_name }}"/>
						</div>
						<div>
							<label class="text-gray-700" htmlfor="last_name">
								Apellidos
							</label>
							<input class="block w-full px-4 py-2 mt-2 text-gray-700  bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" type="text" name="last_name" value="{{ user.last_name }}"/>
						</div>
						<div>
							<label class="text-gray-700" htmlfor="email">
								Email
							</label>
							<input class="block w-full px-4 py-2 mt-2 text-gray-700  bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" type="email" name="email" value="{{ user.email }}"/>
						</div>
					</div>
				</div>

				<div class="flex justify-end mt-8 gap-3">
					<button type="submit" class="px-6 py-2 text-center text-gray-100 items-center inline-flex text-base leading-5 font-semibold rounded-md bg-black hover:bg-gray-600 focus:outline-none focus:bg-gray-600">
						Guardar
					</button>
					<a href="/dashboard" class="close px-6 py-2 text-center items-center inline-flex text-base leading-5 font-semibold rounded-md bg-red-100 text-red-800" type="button">
						Cancelar
					</a>
				</div>
			</form>
		</div>
		<div class="md:h-auto md:w-[40%] w-full bg-[#F9FAFB] p-6 rounded-lg">
			<h3 class="font-bold text-lg">Cambiar contraseña</h3>
			{{error}}
			<form class="flex flex-col" action="/profile/change-password" method="POST">
				<div class="w-full grid grid-cols-1 gap-6 mt-4">
					<div>
						<label class="text-gray-700" htmlfor="current_password">
							Contraseña actual
						</label>
						<input class="block w-full px-4 py-2 mt-2 text-gray-700  bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" type="password" name="current_password"/>
					</div>

					<div class="flex items-center gap-4">
						<div class="w-1/2">
							<label class="text-gray-700" htmlfor="new_password">
								Nueva contraseña
							</label>
							<input class="block w-full px-4 py-2 mt-2 text-gray-700  bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" type="password" name="new_password"/>
						</div>
						<div class="w-1/2">
							<label class="text-gray-700" htmlfor="confirm_new_password">
								Confirmar nueva contraseña
							</label>
							<input class="block w-full px-4 py-2 mt-2 text-gray-700  bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" type="password" name="confirm_new_password"/>
						</div>
					</div>

				</div>
				<div class="flex justify-end mt-8 gap-3">
					<button type="submit" class="px-6 py-2 text-center text-gray-100 items-center inline-flex text-base leading-5 font-semibold rounded-md bg-black hover:bg-gray-600 focus:outline-none focus:bg-gray-600">
						Cambiar contraseña
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
<script>
	{% if passwordMessage %}
		Toastify({
			text: "{{ passwordMessage }}",
			duration: 3000,
			newWindow: true,
			close: true,
			gravity: "top", // `top` o `bottom`
			position: 'right', // `left`, `center` o `right`
			stopOnFocus: true, // Detiene el cierre automático al poner el cursor sobre el toast
			style: {
				background: "rgb(187 247 208)",
				color: "rgb(34 197 94)",
				borderRadius: "10px"
			}
		}).showToast();
	{% endif %}
	{% if profileMessage %}
		Toastify({
			text: "{{ profileMessage }}",
			duration: 3000,
			newWindow: true,
			close: true,
			gravity: "top", // `top` o `bottom`
			position: 'right', // `left`, `center` o `right`
			stopOnFocus: true, // Detiene el cierre automático al poner el cursor sobre el toast
			style: {
				background: "rgb(187 247 208)",
				color: "rgb(34 197 94)",
				borderRadius: "10px"
			}
		}).showToast();
	{% endif %}
</script>