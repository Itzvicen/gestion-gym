<div class="flex items-center justify-between mb-2">
	<div>
		<h2 class="font-bold text-2xl">Clases de entrenamiento</h2>
		<p class="text-gray-500 text-sm">Aquí puedes ver todas las clases de entrenamiento en el sistema.</p>
	</div>
	<div class="flex gap-2">
		<button onclick="openModal()" class="px-4 py-2 text-sm font-medium text-white bg-black rounded-md">
			Crear nueva clase
		</button>
	</div>
</div>

<div class="w-full flex flex-wrap gap-4 pt-3">
	{% for training in trainings %}
		<a href="/dashboard/training/{{ training.id }}" class="relative flex overflow-hidden rounded-lg border 2xl:w-[24.3%] lg:w-[32.5%] md:w-[48.5%] w-full bg-card text-card-foreground shadow hover:bg-slate-200/40 transition-all duration-500 ease-in-out">
			<div class="hidden sm:block sm:shrink-0 w-1/3">
				<img alt={{training.class_name}} src="{{training.poster_image}}" class="w-full h-[184px] object-cover"/>
			</div>
			<div class="w-2/3 p-4">
				<div class="sm:flex sm:justify-between sm:gap-4">
					<div>
						<h3 class="text-lg font-bold text-gray-900 sm:text-xl">{{ training.class_name}}</h3>
						<p class="text-sm font-medium text-gray-600">{{training.instructor}}</p>
					</div>
				</div>

				<div class="mt-4">
					<p class="max-w-[40ch] text-sm text-gray-500"><i class="fa-solid fa-map-pin mr-1.5"></i>{{training.location}}</p>
				</div>

				<dl class="mt-6 flex gap-4 sm:gap-6">
					<div class="flex flex-col-reverse">
						<dt class="text-xs flex font-medium gap-2 text-gray-500">Duración de la clase</dt>
						<dd class="text-sm text-gray-600">
							<i class="fa-solid fa-clock mr-1.5"></i>{{ training.class_duration }}
							minutos
						</dd>
					</div>

					<div class="flex flex-col-reverse">
						<dt class="text-xs font-medium text-gray-500">Fecha de registro</dt>
						<dd class="text-sm text-gray-600">
							<i class="fa-solid fa-calendar mr-1.5"></i>{{ training.class_date|date('d/m/Y') }}
						</dd>
					</div>
				</dl>
			</div>
		</a>
	{% endfor %}
</div>
