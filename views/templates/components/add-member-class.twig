<div id="add-modal" class="hidden absolute inset-0 z-50 bg-gray-600 bg-opacity-50">
	<div class="flex items-center justify-center min-h-screen">
		<div class="md:h-auto 2xl:w-[30%] md:w-[40%] w-full bg-[#F9FAFB] p-6 rounded-lg">
			<h3 class="font-bold text-lg">Añadir miembro a la
				{{training.class_name}}</h3>
			<form class="flex flex-col w-full" action="/dashboard/training/{{training.id}}/add-member" method="POST">
				<div class="mt-4">
					<div class="w-full flex justify-between items-end gap-3">
						<div class="w-[55]">
							<label class="text-gray-700" htmlfor="first_name">
								Seleccionar miembro
							</label>
							<select class="w-full px-4 py-1.5 mt-2 text-gray-700  bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" name="member_id">
								{% for member in allMembers %}
									<option value="{{ member.id }}">{{ member.first_name }}
										{{ member.last_name }}</option>
								{% endfor %}
							</select>
						</div>
						<div class="w-[45%]">
							<button type="submit" class="w-full py-2 text-center text-gray-100 items-center text-base leading-5 font-semibold rounded-md bg-black hover:bg-gray-600 focus:outline-none focus:bg-gray-600">
								Añadir miembro a la clase</i>
						</button>
					</div>
				</div>

				<div class="flex justify-end mt-6 gap-3">
					<button onclick="closeAddModal()" class=" px-6 py-2 text-center items-center inline-flex text-base leading-5 font-semibold rounded-md bg-red-600 text-white" type="button">
						Cancelar
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
